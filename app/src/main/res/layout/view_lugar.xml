<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8pt"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagen_detalles_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/lostacosdelasseis" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:theme="@style/CustomRatingBar"
                    android:numStars="5"
                    android:rating="4.5"
                    android:isIndicator="true"
                    android:stepSize="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/barato"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/descripcion_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textoEjemplo"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/text_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Antonio Caso 2449"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

